{% macro message(class, message, isDismissable, icon) %}
    {% import "@TopnodeBase/macros/icon.html.twig" as icons %}

    {% if class not in ['success', 'danger', 'info', 'warning', 'primary'] %}
        {% set class = 'info' %}
    {% endif %}
    <div class="alert alert-{{ class }} {{ isDismissable ? 'alert-dismissible' : '' }}" role="alert">
        {%- if isDismissable -%}
            <button type="button" class="close" data-dismiss="alert" aria-label="{{ 'app.default.close'|trans }}"><span aria-hidden="true">Ã—</span></button>
        {%- endif -%}

        {%- if icon -%}
            {{ icons.icon(icon) }}
        {%- endif %}

        {{ message|trans|raw -}}
    </div>
{% endmacro %}
